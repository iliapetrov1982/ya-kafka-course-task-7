<configuration scan="true">

    <!-- выводим только само сообщение без таймстампов и уровней -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Глушим болтливые библиотеки -->
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="io.confluent"   level="WARN"/>
    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="org.apache.http" level="WARN"/>

    <!-- Наш код: можно INFO (или DEBUG, если нужно), логируем в консоль -->
    <logger name="de.ya.kafka" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- По умолчанию всё остальное — WARN -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
